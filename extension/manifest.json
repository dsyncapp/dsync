{
  "manifest_version": 3,
  "name": "dsync",
  "version": "0.0.3",

  "description": "Allows the dsync app to control video players discovered in websites",

  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://*/"],

  "background": {
    "service_worker": "dist/background/index.js"
  },

  "action": {
    "default_popup": "index.html",
    "default_title": "DSync Controller"
  }
}
