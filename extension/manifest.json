{
  "manifest_version": 2,
  "name": "dsync",
  "version": "0.0.1",

  "description": "Allows the dsync app to control video players discovered in websites",

  "permissions": ["tabs", "webNavigation", "<all_urls>"],

  "background": {
    "scripts": ["dist/background/index.js"]
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "DSync Controller"
  }
}
