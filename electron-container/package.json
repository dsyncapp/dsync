{
  "name": "@dsyncapp/electron-container",
  "version": "0.0.1",
  "description": "",
  "repository": "https://github.com/dsyncapp/dsync",
  "main": "dist/index.js",
  "scripts": {
    "copy-resources": "mkdir -p dist && cp -a ../app/out ./dist/out",
    "build": "pnpm copy-resources && tsc -b",
    "start": "pnpm build && electron dist/index",
    "dist": "electron-builder build",
    "release": "pnpm dist -- -p always"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dsyncapp/protocols": "^0.0.1",
    "@dsyncapp/dsync": "^0.0.1",
    "uuid": "^8.3.2",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.2.2",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "productName": "Dsync",
    "appId": "app.dsync",
    "files": [
      "dist/**",
      "env.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "forceCodeSigning": true,
      "gatekeeperAssess": false,
      "identity": "dsync-distribution-cert",
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "publish": [
      "github"
    ]
  }
}
